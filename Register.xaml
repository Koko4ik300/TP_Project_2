<Page x:Class="TP_Project.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TP_Project"
      mc:Ignorable="d"
      Title="Register" Height="1020" Width="848">

    <Grid Margin="30,30,26,37" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <TextBlock Text="Регистрация"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,25"/>

     
        <StackPanel Margin="0,64,0,255" Grid.RowSpan="2" Background="White">
            <Label Content="Имя пользователя:" Margin="0,0,0,5" Background="#FFF09F9F"/>
            <TextBox x:Name="UsernameBox" Height="30" Margin="0,0,0,10" Background="White"/>

            <Label Content="Пароль:" Margin="0,0,0,5" Background="#FFBC8A8A"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>

            <Label Content="Подтверждение пароля:" Margin="0,0,0,5" Background="#FFA4E845"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Margin="0,0,0,10"/>
        </StackPanel>

        
        <Button Grid.Row="2"
                Content="Зарегистрироваться"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                Height="40"
                Margin="0,5,0,30"
                Click="RegisterButton_Click"/>

        
        <Button Grid.Row="2"
                Content="Войти"
                Background="Yellow"
                Foreground="Black"
                FontWeight="Bold"
                Height="40"
                Margin="0,50,0,-15"
                Click="LoginButton_Click"/>
    </Grid>
</Page>