<Page x:Class="TP_Project.AddHomeworkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP_Project"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Background="Gray"
      Title="AddHomeworkPage">


    <Grid>
        <Button Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="45" Height="45" Content="Назад" Margin="10"></Button>
        <Button Width="60" Height="45" Margin="170,424,170,31" Content="Добавить" Click="Button_Click_1"></Button>
        
        <TextBox Name ="SubjectTextBox" Height="20" Width="200" Margin="100,157,100,323"></TextBox>
        <TextBox Name ="HomeworkTextBox" Height="20" Width="200"></TextBox>
        
        <Label Width="200" Margin="100,204,100,265" Content="Задание:" FontSize="15"/>
        <Label Width="200" Margin="100,122,100,348" Content="Предмет:" FontSize="15"/>

        <DatePicker x:Name="DatePicker" Width="200" Margin="100,295,100,182"/>

    </Grid>

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


</Page>
