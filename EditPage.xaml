<Page x:Class="TP_Project.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP_Project"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="400"
      Background="Gray"
      Title="EditPage">


    <Grid>
        <Button Width="60" Height="45" Margin="170,353,170,102" Content="Изменить" HorizontalAlignment ="Center" Click="Edit_Button_Click"/>

        <TextBox Name ="SubjectTextBox2" Height="20" Width="200" Margin="100,157,100,323"></TextBox>
        <TextBox Name ="HomeworkTextBox2" Height="20" Width="200"></TextBox>

        <Label Width="200" Margin="100,204,100,265" Content="Задание:" FontSize="15"/>
        <Label Width="200" Margin="100,122,100,348" Content="Предмет:" FontSize="15"/>

        <DatePicker x:Name="DatePicker2" Width="200" Margin="100,295,100,182"/>

    </Grid>

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>


</Page>