<Window x:Class="TP_Project.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_Project"
        mc:Ignorable="d"
        Title="Вход в систему" Height="1020" Width="848">

    <Grid Margin="30,30,26,37">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Вход в систему"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,25"/>

        <!-- Основная форма -->
        <StackPanel Margin="0,64,0,255" Grid.RowSpan="2">
            <Label Content="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox" Height="30" Margin="0,0,0,10"/>

            <Label Content="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>

            <!-- Чекбокс "Запомнить меня" -->
            <CheckBox x:Name="RememberMeCheckBox" 
                      Content="Запомнить меня" 
                      Margin="0,10,0,10"/>
        </StackPanel>

        <!-- Кнопка входа -->
        <Button Grid.Row="2"
                Content="Войти"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                Height="40"
                Margin="0,5,0,30"
                Click="LoginButton_Click"/>

        <!-- Кнопка регистрации -->
        <Button Grid.Row="2"
                Content="Зарегистрироваться"
                Background="Yellow"
                Foreground="Black"
                FontWeight="Bold"
                Height="40"
                Margin="0,50,0,-15"
                Click="RegisterButton_Click"/>

    </Grid>
</Window>