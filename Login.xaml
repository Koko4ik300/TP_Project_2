<Page x:Class="TP_Project.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TP_Project"
      mc:Ignorable="d"
      Title="Вход в систему" Height="1020" Width="848">

    <Grid Margin="30,30,26,37" Background="#FFFBFBFB">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Вход в систему"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,25"/>


        <StackPanel Margin="0,64,0,200" Grid.RowSpan="2" Background="#FFB2B69C">
            <Label Content="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox" Height="30" Margin="0,0,0,10"/>

            <Label Content="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10"/>


            <CheckBox x:Name="RememberMeCheckBox" 
                      Content="Запомнить меня" 
                      Margin="0,10,0,10"/>
        </StackPanel>


        <Button Grid.Row="1"
                Content="Войти"
                Background="#4CAF50"
                Foreground="White"
                FontWeight="Bold"
                Height="40"
                Margin="0,412,0,362"
                Click="LoginButton_Click"/>


        <Button Grid.Row="1"
                Content="Зарегистрироваться"
                Background="Yellow"
                Foreground="Black"
                FontWeight="Bold"
                Height="40"
                Margin="0,467,0,307"
                Click="RegisterButton_Click"/>

    </Grid>
</Page>